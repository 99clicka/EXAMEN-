 CREATE TABLESPACE MIND_TERM
  DATAFILE 'tbs_perm_01.dat' 
    SIZE 50M
  ONLINE;
  
 CREATE USER CFONNEGRA
   IDENTIFIED  BY A1234
   DEFAULT TABLESPACE MIND_TERM
   
 
   
CREATE ROLE PARCIAL;
   

 GRANT CREATE SESSION TO CFONNEGRA;
 GRANT CREATE TABLE TO CFONNEGRA;

 GRANT CREATE TABLE TO PARCIAL;
 GRANT CREATE SESSION TO PARCIAL;
 
 GRANT PARCIAL  TO CFONNEGRA;
 
CREATE SEQUENCE S_DPT
INCREMENT BY 1
START WITH 22
MINVALUE 22 


CREATE SEQUENCE S_MUNICIPIOS
INCREMENT BY 1
START WITH 89
MINVALUE 89 

CREATE SEQUENCE S_PROYECTOS
INCREMENT BY 1
START WITH 40
MINVALUE 40 

CREATE SEQUENCE S_PEAJES
INCREMENT BY 1
START WITH 101
MINVALUE 101


CREATE TABLE DEPARTAMENTOS
( ID_DPT INT  NOT NULL,
 NOMBRE varchar2(250) NOT NULL
  
)
CREATE TABLE MUNICIPIOS
( ID_MNP INT  NOT NULL,
 NOMBRE varchar2(250) NOT NULL
  
)
CREATE TABLE PROYECTOS
( ID_PR INT  NOT NULL,
 NOMBRE varchar2(250) NOT NULL
  
)
CREATE TABLE PEAJES
( ID_P INT  NOT NULL,
ID_DPT INT  NOT NULL,
ID_PR INT  NOT NULL,
ID_MNP INT  NOT NULL,
NOMBRE varchar2(250) NOT NULL
fecha_ultimo_cambio_tarifa DATE 
TARIFA NUMBER  (19,4)
)
